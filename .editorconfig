# EditorConfig: http://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.gradle]
indent_size = 2

[*.groovy]
indent_size = 4

[*.java]
indent_size = 4

[*.scala]
indent_size = 2

[*.json]
indent_size = 2

[*.py]
indent_size = 2

[*.sh]
indent_size = 2

[*.{yml, yaml}]
indent_size = 2

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false

[*.{xsd, xml}]
indent_size = 4
